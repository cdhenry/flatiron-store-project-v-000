<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% if current_cart %>
  <br><br><%= link_to "Cart", cart_path(current_cart) %><br><br>
<% end %>

<% @items.each do |item| %>
  <% if item.inventory > 0 %>
    <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> |
    <% if current_user %>
      <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
    <% end %>
    </p>
  <% end %>
<% end %>
